Show
{{ end }}

{{ define "content" }}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  {{if .Is_root}}
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-gray-900">Password Store</h1>
        <p class="text-gray-600 text-sm">Manage your encrypted passwords securely</p>
      </div>
      <div class="flex gap-2 items-center">
        <button onclick="openSearch()" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search
          <kbd class="ml-2 inline-flex items-center gap-1 px-1.5 py-0.5 text-xs font-medium text-gray-400 bg-gray-100 rounded border border-gray-200">
            <span>âŒ˜K</span>
          </kbd>
        </button>
        <a href="/insert" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Password
        </a>
      </div>
    </div>
  </div>
  {{end}}

  {{if .Passwords}}
  <div class="gap-4 mb-8 overflow-y-auto max-h-[60vh] overflow-x-hidden">
    {{ range .Passwords }}
     {{ template "password-item" . }}
    {{ end }}
  </div>
  {{else}}
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No passwords found</h3>
    <a href="/insert" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add Password
    </a>
  </div>
  {{end}}
  
  {{if .Is_root}}
  <div id="passwordMenu" 
      class="bg-white rounded-lg shadow-md border border-gray-200 p-6"
      x-data="{
            showPrivateKey: false,
            privateKey: '',
            passwordContent: '',
            privateKeyPassword: '',
            MasterPassword: '',
            init() {
                this.showPrivateKey = !localStorage.getItem('privateKey')
            },
            async renderDecryptPassword(privateKey, privateKeyPassword, masterPassword) { 
                try{
                    d = await handlePasswordDecrypt(privateKey, privateKeyPassword, masterPassword, this.passwordContent);
                    if (privateKey){
                        savePrivateKey(privateKey, privateKeyPassword, masterPassword);
                    }
                    this.showPrivateKey = false;
                    this.privateKey = '';
                    $refs.decodedContent.innerText = d;
                    $refs.encodedContent.innerText = '';
                } catch (error) {
                    alert('Failed to decrypt password: ' + error.message);
                    return;
                }
            } 
        }"
      >
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Decrypt Password</h3>
    <div class="gap-4 mb-4">
      <div x-show="showPrivateKey">
        <label for="privateKey" class="block text-sm font-medium text-gray-700 mb-1">Private Key</label>
        <textarea 
          id="privateKey" 
          x-model="privateKey"
          class="p-4 shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full text-sm border-gray-300 rounded-md"
          placeholder="Enter your private key"
          rows="4"></textarea>
      </div>
      <div x-show="showPrivateKey">
        <label for="privateKeyPassword" class="block text-sm font-medium text-gray-700 mb-1">PrivateKey Password</label>
        <input 
          type="password" 
          id="privateKeyPassword" 
          x-model="privateKeyPassword"
          placeholder="Enter your private key password" 
          class="p-4 shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full text-sm border-gray-300 rounded-md">
      </div>
      <div>
        <label for="masterPassword" class="block text-sm font-medium text-gray-700 mb-1">Master Password</label>
        <input 
          type="password" 
          id="masterPassword" 
          x-model="MasterPassword"
          placeholder="Enter your master password" 
          class="p-4 shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full text-sm border-gray-300 rounded-md">
      </div>
    </div>
    <button 
      id="showPasswordBtn" 
      class="w-full inline-flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed mb-4" 
      @click="renderDecryptPassword(privateKey, privateKeyPassword, MasterPassword)"
    >
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      Show Password
    </button>
    <div id="password-content"></div>
  </div>
  
<dialog id="search-dialog" class="fixed z-50 inset-0">
  <div class="fixed inset-0 bg-black/50" onclick="closeSearch()"></div>
  <div class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] max-w-[90vw] bg-white rounded-xl shadow-2xl overflow-hidden">
    <div class="flex items-center border-b border-gray-200 px-4">
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="search" id="search-input"
             name="query"
             class="w-full px-4 py-4 text-lg border-0 focus:ring-0 focus:outline-none placeholder-gray-400"
             placeholder="Search passwords..."
             hx-post="/search"
             hx-trigger="input changed delay:200ms"
             hx-target="#search-results"
             hx-indicator="#search-loading"
             autocomplete="off">
      <kbd class="hidden sm:inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-gray-400 bg-gray-100 rounded">
        <span>ESC</span>
      </kbd>
    </div>
    <div id="search-results" class="max-h-[400px] overflow-y-auto border-t border-gray-100">
      <div class="px-4 py-8 text-center text-gray-500 text-sm">
        Start typing to search passwords...
      </div>
    </div>
    <div id="search-loading" class="hidden px-4 py-3 text-sm text-gray-500 border-t border-gray-100">
      <span class="inline-flex items-center">
        <svg class="animate-spin -ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Searching...
      </span>
    </div>
  </div>
</dialog>

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
<script>
function openSearch() {
  const dialog = document.getElementById('search-dialog');
  const input = document.getElementById('search-input');

  document.getElementById('search-input').value = '';
  document.getElementById('search-results').innerHTML = '<div class="px-4 py-8 text-center text-gray-500 text-sm">Start typing to search passwords...</div>';
  dialog.showModal();
  setTimeout(() => input.focus(), 50);
}

function closeSearch() {
  const dialog = document.getElementById('search-dialog');
  dialog.close();
}

function handleSearchClick(path) {
  NotificationManager.show('Selected: ' + path, 'info', 2000);
  closeSearch();
}

document.addEventListener('keydown', function(e) {
  if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
    e.preventDefault();
    openSearch();
  }
  if (e.key === 'Escape') {
    closeSearch();
  }
});

document.getElementById('search-dialog').addEventListener('htmx:trigger', function(e) {
     searchInput = document.getElementById('search-input');
     if (e.target !==  searchInput && e.target !== e.currentTarget) {
         closeSearch();
     }
});
</script>


{{ end }}
</div>

{{ end }}

