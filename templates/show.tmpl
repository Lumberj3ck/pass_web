{{ define "title" }}
Show
{{ end }}

{{ define "content" }}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  {{if .Is_root}}
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-on-surface-strong dark:text-on-surface-dark-strong">Password Store</h1>
        <p class="text-on-surface dark:text-on-surface-dark text-sm">Manage your encrypted passwords securely</p>
      </div>
      <div class="flex gap-2 items-center">
        <button onclick="openSearch()" class="inline-flex items-center px-4 py-2 border border-outline dark:border-outline-dark text-sm font-medium rounded-md text-on-surface dark:text-on-surface-dark bg-surface dark:bg-surface-dark-alt hover:bg-surface-alt dark:hover:bg-surface-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary dark:focus:ring-primary-dark">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          Search
          <kbd class="ml-2 inline-flex items-center gap-1 px-1.5 py-0.5 text-xs font-medium text-on-surface/60 dark:text-on-surface-dark/60 bg-surface-alt dark:bg-surface-dark rounded border border-outline dark:border-outline-dark">
            <span>Ctrl+K</span>
          </kbd>
        </button>
        <a href="/insert" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-on-primary dark:text-on-primary-dark bg-primary dark:bg-primary-dark hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary dark:focus:ring-primary-dark">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Password
        </a>
      </div>
    </div>
  </div>
  {{end}}

  <!-- Two-column layout: Password list + Sidebar -->
  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Password List (scrollable) -->
    <div class="flex-1 min-w-0">
      {{if .Passwords}}
      <div class="space-y-3  {{ if .Is_root }} overflow-y-auto {{ end }} max-h-[calc(100vh-200px)] pr-2">
        {{ range .Passwords }}
         {{ template "password-item" . }}
        {{ end }}
      </div>
      {{else}}
      <div class="text-center py-12 bg-surface dark:bg-surface-dark-alt rounded-lg border border-outline dark:border-outline-dark">
        <svg class="mx-auto h-12 w-12 text-on-surface/40 dark:text-on-surface-dark/40 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        <h3 class="text-lg font-medium text-on-surface-strong dark:text-on-surface-dark-strong mb-2">No passwords found</h3>
        <a href="/insert" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-on-primary dark:text-on-primary-dark bg-primary dark:bg-primary-dark hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary dark:focus:ring-primary-dark">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Password
        </a>
      </div>
      {{end}}
    </div>

    <!-- Sticky Sidebar (Decrypt Panel) -->
    {{if .Is_root}}
    <div class="lg:w-[400px] lg:flex-shrink-0">
      <div id="passwordMenu"
          class="bg-surface dark:bg-surface-dark-alt rounded-lg shadow-md border border-outline dark:border-outline-dark p-6 lg:sticky lg:top-8"
          x-data="{
                showPrivateKey: false,
                privateKey: '',
                passwordContent: '',
                privateKeyPassword: '',
                MasterPassword: '',
                init() {
                    this.showPrivateKey = !localStorage.getItem('privateKey')
                },
                async renderDecryptPassword(privateKey, privateKeyPassword, masterPassword) {
                    try{
                        d = await handlePasswordDecrypt(privateKey, privateKeyPassword, masterPassword, this.passwordContent);
                        if (privateKey){
                            savePrivateKey(privateKey, privateKeyPassword, masterPassword);

                        notify('success', 'Success!', 'Private key are securely encrypted and stored');

                        }
                        this.showPrivateKey = false;
                        this.privateKey = '';
                        $refs.decodedContent.innerText = d;
                        $refs.encodedContent.innerText = '';
                    } catch (error) {
                        notify('warning', 'Oh no Error!', 'Failed to decrypt password: ' + error.message);
                        return;
                    }
                }
            }"
          >
        <h3 class="text-lg font-semibold text-on-surface-strong dark:text-on-surface-dark-strong mb-4">Decrypt Password</h3>
        <div class="space-y-4 mb-4">
          <div x-show="showPrivateKey">
            <label for="privateKey" class="block text-sm font-medium text-on-surface dark:text-on-surface-dark mb-1">Private Key</label>
            <textarea
              id="privateKey"
              x-model="privateKey"
              class="p-4 shadow-sm focus:ring-primary dark:focus:ring-primary-dark focus:border-primary dark:focus:border-primary-dark block w-full text-sm border border-outline dark:border-outline-dark rounded-md bg-surface dark:bg-surface-dark text-on-surface-strong dark:text-on-surface-dark-strong"
              placeholder="Enter your private key"
              rows="4"></textarea>
          </div>
          <div x-show="showPrivateKey">
            <div class="flex w-full flex-col gap-1 text-on-surface dark:text-on-surface-dark">
                <label for="privateKeyPassword" class="w-fit pl-0.5 text-sm">Private Key Password</label>
                <div x-data="{ showPassword: false }" class="relative">
                    <input id="privateKeyPassword" x-model="privateKeyPassword" x-bind:type="showPassword ? 'text' : 'password'" class="w-full rounded-lg border border-outline dark:border-outline-dark bg-surface-alt dark:bg-surface-dark px-2 py-2 text-sm text-on-surface-strong dark:text-on-surface-dark-strong focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary dark:focus-visible:outline-primary-dark disabled:cursor-not-allowed disabled:opacity-75" name="password" autocomplete="current-password" placeholder="Enter your private key password"/>
                    <button type="button"  x-on:click="showPassword = !showPassword" class="absolute right-2.5 top-1/2 -translate-y-1/2 text-on-surface dark:text-on-surface-dark" aria-label="Show password">
                        <svg x-show="!showPassword" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="size-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        <svg x-show="showPassword" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="size-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                        </svg>
                    </button>
                </div>
            </div>
          </div>
          <div>
            <div class="flex w-full flex-col gap-1 text-on-surface dark:text-on-surface-dark">
                <label for="masterPassword" class="w-fit pl-0.5 text-sm">Master Password</label>
                <div x-data="{ showPassword: false }" class="relative">
                    <input id="masterPassword" x-model="MasterPassword" x-bind:type="showPassword ? 'text' : 'password'" class="w-full rounded-lg border border-outline dark:border-outline-dark bg-surface-alt dark:bg-surface-dark px-2 py-2 text-sm text-on-surface-strong dark:text-on-surface-dark-strong focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary dark:focus-visible:outline-primary-dark disabled:cursor-not-allowed disabled:opacity-75" name="password" autocomplete="current-password" placeholder="Enter your master password"/>
                    <button type="button"  x-on:click="showPassword = !showPassword" class="absolute right-2.5 top-1/2 -translate-y-1/2 text-on-surface dark:text-on-surface-dark" aria-label="Show password">
                        <svg x-show="!showPassword" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="size-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                        <svg x-show="showPassword" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="size-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 0 0 1.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.451 10.451 0 0 1 12 4.5c4.756 0 8.773 3.162 10.065 7.498a10.522 10.522 0 0 1-4.293 5.774M6.228 6.228 3 3m3.228 3.228 3.65 3.65m7.894 7.894L21 21m-3.228-3.228-3.65-3.65m0 0a3 3 0 1 0-4.243-4.243m4.242 4.242L9.88 9.88" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        </div>
        <button
          id="showPasswordBtn"
          class="w-full inline-flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-on-primary dark:text-on-primary-dark bg-primary dark:bg-primary-dark hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary dark:focus:ring-primary-dark disabled:opacity-50 disabled:cursor-not-allowed mb-4"
          @click="renderDecryptPassword(privateKey, privateKeyPassword, MasterPassword)"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          Show Password
        </button>
        <div id="password-content"></div>
      </div>
    </div>
    {{end}}
  </div>

  {{if .Is_root}}
<dialog id="search-dialog" class="fixed z-50 inset-0 bg-transparent">
  <div class="fixed inset-0 bg-black/50 dark:bg-black/70" onclick="closeSearch()"></div>
  <div class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] max-w-[90vw] bg-surface dark:bg-surface-dark-alt rounded-xl shadow-2xl border border-outline dark:border-outline-dark overflow-hidden">
    <div class="flex items-center border-b border-outline dark:border-outline-dark px-4">
      <svg class="w-5 h-5 text-on-surface/60 dark:text-on-surface-dark/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <input type="search" id="search-input"
             name="query"
             class="w-full px-4 py-4 text-lg border-0 bg-transparent text-on-surface-strong dark:text-on-surface-dark-strong focus:ring-0 focus:outline-none placeholder-on-surface/40 dark:placeholder-on-surface-dark/40"
             placeholder="Search passwords..."
             hx-post="/search"
             hx-trigger="input changed delay:200ms"
             hx-target="#search-results"
             hx-indicator="#search-loading"
             autocomplete="off">
      <kbd class="hidden sm:inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-on-surface/60 dark:text-on-surface-dark/60 bg-surface-alt dark:bg-surface-dark rounded border border-outline dark:border-outline-dark">
        <span>ESC</span>
      </kbd>
    </div>
    <div id="search-results" class="max-h-[400px] overflow-y-auto border-t border-outline dark:border-outline-dark">
      <div class="px-4 py-8 text-center text-on-surface/60 dark:text-on-surface-dark/60 text-sm">
        Start typing to search passwords...
      </div>
    </div>
    <div id="search-loading" class="hidden px-4 py-3 text-sm text-on-surface/60 dark:text-on-surface-dark/60 border-t border-outline dark:border-outline-dark">
      <span class="inline-flex items-center">
        <svg class="animate-spin -ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Searching...
      </span>
    </div>
  </div>
</dialog>

<script>
function openSearch() {
  const dialog = document.getElementById('search-dialog');
  const input = document.getElementById('search-input');

  document.getElementById('search-input').value = '';
  document.getElementById('search-results').innerHTML = '<div class="px-4 py-8 text-center text-on-surface/60 dark:text-on-surface-dark/60 text-sm">Start typing to search passwords...</div>';
  dialog.showModal();
  setTimeout(() => input.focus(), 50);
}

function closeSearch() {
  const dialog = document.getElementById('search-dialog');
  dialog.close();
}

function handleSearchClick(path) {
  NotificationManager.show('Selected: ' + path, 'info', 2000);
  closeSearch();
}

document.addEventListener('keydown', function(e) {
  if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
    e.preventDefault();
    openSearch();
  }
  if (e.key === 'Escape') {
    closeSearch();
  }
});

document.getElementById('search-dialog').addEventListener('htmx:trigger', function(e) {
     searchInput = document.getElementById('search-input');
     if (e.target !==  searchInput && e.target !== e.currentTarget) {
         closeSearch();
     }
});
</script>

{{ end }}
</div>

{{ end }}
