{{ define "title" }} 
Show
{{ end }}

{{ define "content" }}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  {{if .Is_root}}
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div class="mb-4 sm:mb-0">
        <h1 class="text-3xl font-bold text-gray-900">Password Store</h1>
        <p class="text-gray-600 text-sm">Manage your encrypted passwords securely</p>
      </div>
      <div class="flex gap-2">
        <a href="/insert" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Password
        </a>
      </div>
    </div>
  </div>
  {{end}}

  {{if .Passwords}}
  <div class="gap-4 mb-8 overflow-y-auto max-h-[60vh] overflow-x-hidden">
    {{ range .Passwords }}
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow cursor-pointer"
         {{if .IsDir}}
         hx-post="/?folder-id={{ .Id }}"
         hx-target=".{{.Id}}"
         {{else}}
         hx-post="/password/{{ .Id }}"
         hx-target="#password-content"
         {{end}}
         hx-swap="innerHTML"
         hx-trigger="click consume">
      
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-sm font-semibold text-gray-900 truncate">
          {{if .IsDir}}
          üìÅ {{ .Password }}
          {{else}}
          üîê {{ .Password }}
          {{end}}
        </h3>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>

      <div class="{{.Id}} flex items-center justify-between">
        {{if not .IsDir}}
        <div class="flex items-center text-xs text-gray-500">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          Click to decrypt
        </div>
        
        <button 
          class="text-red-500 hover:text-red-700 p-1"
          hx-delete="/password/{{ .Id }}"
          hx-target="closest .bg-white"
          hx-swap="outerHTML"
          hx-confirm="Delete this password?"
          hx-trigger="click consume">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        </button>
        {{end}}
      </div>
    </div>
    {{ end }}
  </div>
  {{else}}
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
    </svg>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No passwords found</h3>
    <p class="text-gray-600 mb-4">Get started by adding your first password.</p>
    <a href="/insert" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Add First Password
    </a>
  </div>
  {{end}}
  
  {{if .Is_root}}
  <div id="passwordMenu" class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Decrypt Password</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <label for="privateKey" class="block text-sm font-medium text-gray-700 mb-1">Private Key</label>
        <textarea 
          id="privateKey" 
          class="p-4 shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full text-sm border-gray-300 rounded-md"
          placeholder="Enter your private key"
          rows="4"
          oninput="togglePasswordButtons()"
          onchange="togglePasswordButtons()"></textarea>
      </div>
      <div>
        <label for="passphrase" class="block text-sm font-medium text-gray-700 mb-1">Passphrase</label>
        <input 
          type="password" 
          id="passphrase" 
          placeholder="Enter your passphrase" 
          class="p-4 shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full text-sm border-gray-300 rounded-md"
          oninput="togglePasswordButtons()">
      </div>
    </div>
    <button 
      id="showPasswordBtn" 
      class="w-full inline-flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed mb-4" 
      onclick="handlePasswordDecrypt()" 
      disabled>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      Show Password
    </button>
    <div id="password-content"></div>
  </div>
  
  <script>
    if (window.passphrase && window.passphrase.length > 0){
      let passInput = document.getElementById("passphrase")
      if (passInput){
        passInput.style.display = "none"
      }
    }
    
    function togglePasswordButtons() {
      const privateKey = document.getElementById('privateKey').value;
      const passphrase = document.getElementById('passphrase').value;
      const showPasswordBtn = document.getElementById('showPasswordBtn');
      showPasswordBtn.disabled = !privateKey || (!passphrase && !window.passphrase);
    }
  </script>
  {{ end }}
</div>
{{ end }}
