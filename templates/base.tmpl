<!DOCTYPE html>
<html lang="en" x-data="{
    darkMode: localStorage.getItem('theme') === 'dark' || (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches)
}" x-init="$watch('darkMode', val => localStorage.setItem('theme', val ? 'dark' : 'light'))" :class="{ 'dark': darkMode }">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ template "title" .}}</title>
        <link href="static/css/output.css" rel="stylesheet">
        <script src="https://unpkg.com/htmx.org@2.0.4" integrity="sha384-HGfztofotfshcF7+8n44JQL2oJmowVChPTg48S+jvZoztPfvwD79OC/LTtG6dMp+" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/openpgp@6.1.0/dist/openpgp.min.js"></script>
        <script src="/static/js/password_decrypt.js"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    </head>
    <body class="bg-surface dark:bg-surface-dark text-on-surface dark:text-on-surface-dark min-h-screen transition-colors duration-200">
        {{ template "content" .}}
        {{ template "notifications" .}}

        <!-- Theme Toggle Button -->
        <button
            @click="darkMode = !darkMode"
            class="fixed bottom-4 right-4 p-3 rounded-full bg-surface-alt dark:bg-surface-dark-alt border border-outline dark:border-outline-dark shadow-lg hover:shadow-xl transition-all duration-200 z-50"
            :aria-label="darkMode ? 'Switch to light mode' : 'Switch to dark mode'">
            <!-- Sun icon (shown in dark mode) -->
            <svg x-show="darkMode" class="w-5 h-5 text-on-surface-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <!-- Moon icon (shown in light mode) -->
            <svg x-show="!darkMode" class="w-5 h-5 text-on-surface" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
        </button>
    </body>
</html>

